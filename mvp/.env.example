# Application Configuration
APP_NAME="Intelligent PR Assistant"
APP_VERSION="1.0.0"
APP_ENVIRONMENT="development"
APP_DEBUG=false
APP_HOST="0.0.0.0"
APP_PORT=8000

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_MODEL="gpt-4-turbo"
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# Atlassian Configuration
ATLASSIAN_OAUTH_CLIENT_ID="your-oauth-client-id"
ATLASSIAN_OAUTH_CLIENT_SECRET="your-oauth-client-secret"
JIRA_BASE_URL="https://your-domain.atlassian.net"
JIRA_API_VERSION="3"
BITBUCKET_BASE_URL="https://api.bitbucket.org/2.0"
BITBUCKET_WEBHOOK_SECRET="your-webhook-secret"

# AWS Configuration (Optional)
AWS_REGION="us-east-1"
AWS_DYNAMODB_TABLE="pr-assistant-data"
AWS_KMS_KEY_ID="your-kms-key-id"

# Security Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
JWT_ALGORITHM="HS256"
ENCRYPTION_ALGORITHM="AES-256-GCM"
KEY_ROTATION_DAYS=90

# Scoring Configuration
SCORING_CLARITY_WEIGHT=0.3
SCORING_CONTEXT_WEIGHT=0.25
SCORING_COMPLETENESS_WEIGHT=0.25
SCORING_JIRA_WEIGHT=0.2
SCORING_EXCELLENT_THRESHOLD=8.5
SCORING_GOOD_THRESHOLD=7.0
SCORING_NEEDS_IMPROVEMENT_THRESHOLD=5.0

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_DESTINATIONS="console"

# Feature Flags
FEATURE_AI_SUGGESTIONS=true
FEATURE_JIRA_AUTO_LINK=true
FEATURE_COMPLIANCE_CHECK=true
FEATURE_ANALYTICS=false
